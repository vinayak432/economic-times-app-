pipeline {
    agent { label 'java' }

    tools{
    jdk 'JDK17'
    maven 'maven'
    }

    stages {
      
        stage('checkout') {
            steps {
                sh "rm -rf economic-times-app"
              sh  "git clone https://github.com/vinayak432/economic-times-app-.git"
            }
        }
   stage(' build') {
            steps {
                sh "mvn clean package"
                sh "sudo cp target/*.war /opt/tomcat10/webapps"
            }
        }
    
  }
}
